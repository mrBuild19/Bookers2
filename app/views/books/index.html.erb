<div class="container">
	<div class="row">
		<div class="col-xs-3">

			<div class="eroor_msg">
				<% if @book.errors.any? %>
					<h4><%= @book.errors.count %> error prohibited this obj from being saved: </h4>
					<ul>
						<% @book.errors.full_messages.each do |message| %>
							<li><%= message %></li>
						<% end %>
					</ul>
				<% end %>
			</div>


			<h1>User info</h1>
			<%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "100x100" %>
			<table class="table">
				<tbody>
					<tr>
						<th>name</th>
						<th><%= @user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<a href="/users/<%= current_user.id %>/edit" class="btn btn-default btn-block"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></a>


			<h1>New book</h1>
			<%= form_for(@book) do |f| %>
				<div class="form-group">
					<p><b>Title</b></p>
					<%= f.text_field :title, class:"form-control" %>
				</div>
				<div class="form-group">
					<p><b>Body</b></p>
					<%= f.text_area :body, class:"form-control" %>
				</div>
				<%= f.submit 'Create Book', class:"btn btn-primary btn-block" %>
			<% end %>
		</div>


		<div class="col-xs-9">
			<h1>Books</h1>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>

				<% @books.each do |book| %>
					<tbody>
						<tr>
							<td><a href="/users/<%= book.user.id %>"><%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "40x40" %></a></td>
							<td><%= link_to book.title, book_path(book) %></td>
							<td><%= book.body %></td>
						</tr>
					</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>