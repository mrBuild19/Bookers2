<div class="container">
	<div class="row">
		<div class="col-lg-6 col-lg-offset-3">
			<h1>Editing Book</h1>

			<div class="error_msg">
				<% if @book.errors.any? %>
					<h4><%= @book.errors.count %> error prohibited this obj from being saved: </h4>
					<ul>
						<% @book.errors.full_messages.each do |message| %>
								<li><%= message %></li>
						<% end %>
					</ul>
				<% end %>
			</div>


			<%= form_for(@book) do |f| %>
				<div class="form_group form_title">
					<label for="title">Title</label><br>
					<%= f.text_field :title, id:"title", class:"form-control" %>
				</div>
				<div class="form_group form_body">
					<label for="body">Opinion</label><br>
					<%= f.text_area :body, id:"body", class:"form-control" %>
				</div>
				<%= f.submit 'Update Book', class:"btn btn-primary btn-block" %>
			<% end %>

			<ul class="list-inline">
				<li><%= link_to "show", book_path(@book) %></li>
				<li>|</li>
				<li><%= link_to "Back", books_path %></li>
			</ul>
		</div>
	</div>
</div>