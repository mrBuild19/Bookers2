<div class="container">
	<div class="row">
		<div class="col-lg-3">

			<% if flash[:notice] %>
				<div class="flash">
					<%= flash[:notice] %>
				</div>
			<% end %>


			<h1>User info</h1>
			<%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "100x100" %>
			<table class="table">
				<tbody>
					<tr>
						<th>name</th>
						<th><%= @user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<a href="/users/<%= current_user.id %>/edit" class="btn btn-default btn-block"><i class="fas fa-wrench"></i></a>


			<h1>New book</h1>
			<%= form_for(@book) do |f| %>
				<div class="form-group">
					<p><b>Title</b></p>
					<%= f.text_field :title, class:"form-control" %>
				</div>
				<div class="form-group">
					<p><b>Body</b></p>
					<%= f.text_area :body, class:"form-control" %>
				</div>
				<%= f.submit 'Create Book', class:"btn btn-primary btn-block" %>
			<% end %>
		</div>


		<div class="col-lg-9">
			<h1>Books</h1>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>

				<% @show_book.each do |book| %>
					<% if @user.id == book.user_id %>
						<tbody>
							<tr>
								<td><%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "40x40" %></td>
								<td><%= link_to book.title, book_path(book) %></td>
								<td><%= book.body %></td>
							</tr>
						</tbody>
					<% end %>
				<% end %>
			</table>
		</div>
	</div>
</div>