<div class="container">
	<div class="row">
		<div class="col-xs-3">

			<h1>User info</h1>
			<%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "100x100" %>
			<table class="table">
				<tbody>
					<tr>
						<th>name</th>
						<th><%= @user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<a href="/users/<%= current_user.id %>/edit" class="btn btn-default btn-block"><i class="fas fa-wrench"></i></a>


			<h1>New book</h1>
			<%= form_for(@book) do |f| %>
				<div class="form-group">
					<p><b>Title</b></p>
					<%= f.text_field :title, class:"form-control" %>
				</div>
				<div class="form-group">
					<p><b>Body</b></p>
					<%= f.text_area :body, class:"form-control" %>
				</div>
				<%= f.submit 'Create Book', class:"btn btn-primary btn-block" %>
			<% end %>
		</div>


		<div class="col-xs-9">
			<h1>Users</h1>
			<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
					</tr>
				</thead>

				<% @users.each do |user| %>
					<tbody>
						<tr>
							<td><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "40x40" %></td>
							<td><%= user.name %></td>
							<td><%= link_to "Show", user_path(user) %></td>
						</tr>
					</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>