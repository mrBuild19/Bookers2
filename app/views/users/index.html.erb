<div class="container">
	<div class="row">
		<div class="col-xs-3">

			<%= render 'layouts/list', user: @user, book: @book %>


		<div class="col-xs-9">
			<h1>Users</h1>
			<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
					</tr>
				</thead>

				<% @users.each do |user| %>
					<tbody>
						<tr>
							<td><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "40x40" %></td>
							<td><%= user.name %></td>
							<td><%= link_to "Show", user_path(user) %></td>
						</tr>
					</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>